<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>gear.ac</path>

  <animation>
    <object-name>fond</object-name>
    <object-name>manette</object-name>
    <object-name>neutreL</object-name>
    <object-name>neutreN</object-name>
    <object-name>neutreR</object-name>
    <object-name>greenL</object-name>
    <object-name>greenN</object-name>
    <object-name>greenR</object-name>
    <object-name>redL</object-name>
    <object-name>redN</object-name>
    <object-name>redR</object-name>
  </animation>

  <animation>
    <type>material</type>
    <object-name>neutreL</object-name>
    <object-name>neutreN</object-name>
    <object-name>neutreR</object-name>
    <object-name>greenL</object-name>
    <object-name>greenN</object-name>
    <object-name>greenR</object-name>
    <object-name>redL</object-name>
    <object-name>redN</object-name>
    <object-name>redR</object-name>
    <emission>
      <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
      <red>   0.50 </red>
      <green> 0.25 </green>
      <blue>  0.25 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>manette</object-name>
    <action>
      <button>0</button>
      <repeatable>false</repeatable>
      <binding>
        <command>property-toggle</command>
        <property>/controls/gear/gear-down</property>
      </binding>
    </action>
  </animation>
  
  <animation>
    <type>rotate</type>
    <object-name>manette</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 90 </dep></entry>
    </interpolation>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

  <!-- Trains sortis -->
  <animation>
    <type>select</type>
    <object-name>greenN</object-name>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>greenL</object-name>
    <condition>
      <equals>
        <property>gear/gear[1]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>greenR</object-name>
    <condition>
      <equals>
        <property>gear/gear[2]/position-norm</property>
        <value>1</value>
      </equals>
    </condition>
  </animation>

  <!-- Trains rentrÃ©s -->
  <animation>
    <type>select</type>
    <object-name>redN</object-name>
    <condition>
      <equals>
        <property>gear/gear[0]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>redL</object-name>
    <condition>
      <equals>
        <property>gear/gear[1]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <animation>
    <type>select</type>
    <object-name>redR</object-name>
    <condition>
      <equals>
        <property>gear/gear[2]/position-norm</property>
        <value>0</value>
      </equals>
    </condition>
  </animation>

  <!-- Trains en mouvement -->
  <animation>
    <type>select</type>
    <object-name>neutreN</object-name>
    <condition>
      <and>
        <greater-than>
          <property>gear/gear[0]/position-norm</property>
          <value>0</value>
        </greater-than>
        <less-than>
          <property>gear/gear[0]/position-norm</property>
          <value>1</value>
        </less-than>
      </and>        
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>neutreL</object-name>
    <condition>
      <and>
        <greater-than>
          <property>gear/gear[1]/position-norm</property>
          <value>0</value>
        </greater-than>
        <less-than>
          <property>gear/gear[1]/position-norm</property>
          <value>1</value>
        </less-than>
      </and>        
    </condition>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>neutreR</object-name>
    <condition>
      <and>
        <greater-than>
          <property>gear/gear[2]/position-norm</property>
          <value>0</value>
        </greater-than>
        <less-than>
          <property>gear/gear[2]/position-norm</property>
          <value>1</value>
        </less-than>
      </and>        
    </condition>
  </animation>
  
</PropertyList>
